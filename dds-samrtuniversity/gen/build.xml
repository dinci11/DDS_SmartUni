<project name="Heating Example" default="compile" basedir=".">
	<!-- Set properties -->
	<property environment="env"/>

	<!-- Ant Properties are immutable. If NDDSHOME is already set this is a NOOP -->
	<property name="env.NDDSHOME" value="/home/dinci11/rti_connext_dds-6.0.0"/>
	<!-- Set Build Path -->
	<path id="build.classpath.release">
		<fileset dir="${env.NDDSHOME}/lib/java" includes="**/nddsjava.jar" />
	</path>
	
	<path id="build.classpath.debug">
		<fileset dir="${env.NDDSHOME}/lib/java" includes="**/nddsjavad.jar" />
	</path>
  
	<!-- Deletes the existing build -->
	<target name="clean">
		<delete>
			<fileset dir="." includes="**/*.class" />
		</delete>
	</target>

	<!-- Build examples -->
	<target name="compile">
		<javac srcdir="." destdir="." includeantruntime="false" classpathref="build.classpath.release" />
		<jar destfile="HeatingExample.jar"
			basedir="."
			includes="**/*.class">
		</jar>
	</target>
	
	<target name="compile-debug">
		<javac srcdir="." destdir="." includeantruntime="false" classpathref="build.classpath.debug" debug="on"/>
		<jar destfile="HeatingExample-debug.jar"
			basedir="."
			includes="**/*.class">
		</jar>
	</target>
	
	<!-- Run release subscriber -->
	<target name="HeatingSubscriber" depends="compile">
		<java fork="true" failonerror="yes" classpathref="build.classpath.release" classpath="HeatingExample.jar" classname="subscribers.HeatingSubscriber">
			<env key="LD_LIBRARY_PATH" path="${env.LD_LIBRARY_PATH};${env.NDDSHOME}/lib/x64Linux4gcc7.3.0"/>
			<arg value="0" description="Domain"/>
			<arg value="0" description="Max loop count"/>
		</java>
	</target>
	
	<!-- Run release publisher -->
	<target name="HeatingPublisher" depends="compile">
		<java fork="true" failonerror="yes" classpathref="build.classpath.release" classpath="HeatingExample.jar" classname="publishers.HeatingPublisher">
			<env key="LD_LIBRARY_PATH" path="${env.LD_LIBRARY_PATH};${env.NDDSHOME}/lib/x64Linux4gcc7.3.0"/>
